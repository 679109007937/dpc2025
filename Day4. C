#include <stdio.h>

void mergeArrays(int arr1[], int arr2[], int m, int n) {
    int merged[m + n];
    int i, j, k = 0;

    for (i = 0; i < m; i++)
        merged[k++] = arr1[i];

    for (j = 0; j < n; j++)
        merged[k++] = arr2[j];

    for (i = 0; i < m + n - 1; i++) {
        for (j = 0; j < m + n - i - 1; j++) {
            if (merged[j] > merged[j + 1]) {
                int temp = merged[j];
                merged[j] = merged[j + 1];
                merged[j + 1] = temp;
            }
        }
    }

    for (i = 0; i < m; i++)
        arr1[i] = merged[i];

    for (j = 0; j < n; j++)
        arr2[j] = merged[m + j];
}

int main() {
    int arr1[] = {1, 3, 5, 7};
    int arr2[] = {2, 4, 6, 8};
    int m = sizeof(arr1) / sizeof(arr1[0]);
    int n = sizeof(arr2) / sizeof(arr2[0]);

    mergeArrays(arr1, arr2, m, n);

    printf("arr1 = ");
    for (int i = 0; i < m; i++)
        printf("%d ", arr1[i]);

    printf("\narr2 = ");
    for (int i = 0; i < n; i++)
        printf("%d ", arr2[i]);

    return 0;
}
