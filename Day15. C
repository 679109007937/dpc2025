#include <stdio.h>
#include <string.h>

int lengthOfLongestSubstring(char *s) {
    int n = strlen(s);
    int index[256];
    for (int i = 0; i < 256; i++) index[i] = -1;
    int maxLen = 0, start = -1;
    for (int i = 0; i < n; i++) {
        if (index[s[i]] > start) start = index[s[i]];
        index[s[i]] = i;
        if (i - start > maxLen) maxLen = i - start;
    }
    return maxLen;
}

int main() {
    char s[100];
    scanf("%s", s);
    printf("%d", lengthOfLongestSubstring(s));
    return 0;
}
