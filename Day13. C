#include <stdio.h>
#include <string.h>

int expand(char *s, int l, int r, int n) {
    while (l >= 0 && r < n && s[l] == s[r]) {
        l--;
        r++;
    }
    return r - l - 1;
}

int main() {
    char s[100];
    scanf("%s", s);
    int n = strlen(s), start = 0, maxlen = 0;
    for (int i = 0; i < n; i++) {
        int len1 = expand(s, i, i, n);
        int len2 = expand(s, i, i + 1, n);
        int len = len1 > len2 ? len1 : len2;
        if (len > maxlen) {
            maxlen = len;
            start = i - (len - 1) / 2;
        }
    }
    for (int i = start; i < start + maxlen; i++) {
        printf("%c", s[i]);
    }
    return 0;
}
